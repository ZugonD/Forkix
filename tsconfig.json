{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "NodeNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    },
  }
}
